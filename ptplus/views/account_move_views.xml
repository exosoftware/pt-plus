<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Sales invoice form -->
    <record id="view_move_form_pt" model="ir.ui.view">
        <field name="name">account.move.form.pt</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Add a cancel button for pt invoices -->
            <xpath expr="//button[@name='button_cancel']" position="after">
                <button
                    name="action_cancel_pt"
                    id="action_cancel_pt"
                    string="Cancel"
                    confirm="Are you sure you want to cancel the document?"
                    type="object"
                    attrs="{'invisible': ['|', '|', ('move_type', 'not in', ('out_invoice', 'out_refund')),
                        ('state', 'in', ('draft', 'cancel')), ('source_billing', '=', False)]}"
                />
            </xpath>
            <!-- Source Billing and Fiscal Document Type-->
            <field name="invoice_date" position="after">
                <field name="l10n_pt_show_source_billing" invisible="1" />
                <field
                    name="source_billing"
                    attrs="{'invisible':[('l10n_pt_show_source_billing', '=', False)]}"
                />
                <field name="l10n_pt_company_show_goods_provision" invisible="1" />
                <field name="l10n_pt_company_invoice_as_delivery" invisible="1" />
                <field
                    name="fiscal_document_type_id"
                    options="{'no_create_edit': True}"
                    attrs="{'invisible':[('source_billing', '=', False)], 'readonly': [('state', '!=', 'draft')]}"
                    domain="[('source_billing', '=', source_billing),
                            ('company_id', '=', company_id),
                            ('section', '=', 'invoice'),
                            ('correction', '=', correction),
                            ('reversion', '=', (move_type == 'out_refund')),
                            ('point_of_sale', '=', False)
                            ]"
                />
                <field name="correction" invisible="1" />
            </field>

            <field name="fiscal_position_id" position="after">
                <field
                    name="export_number"
                    string="Export Statement Number"
                    attrs="{'invisible':[('move_type','not in',('out_invoice', 'out_refund'))]}"
                />
                <field
                    name="export_number"
                    string="Payment Number"
                    attrs="{'invisible':[('move_type','not in',('in_invoice', 'in_refund'))]}"
                />
            </field>

            <xpath expr="//group[@name='sale_info_group']" position="inside">
                <field
                    name="l10n_pt_goods_provision_date"
                    string="Provision Date"
                    attrs="{'invisible': ['|', '|', ('move_type', '!=', 'out_invoice'), ('source_billing', '=', False), ('l10n_pt_company_show_goods_provision', '=', False)]}"
                />
            </xpath>

            <xpath expr="//group[@id='other_tab_group']" position="inside">
                <group
                    string="Delivery Information"
                    name="delivery_info"
                    attrs="{'invisible': ['|', '|', ('move_type', '!=', 'out_invoice'), ('source_billing', '=', False), ('l10n_pt_company_invoice_as_delivery', '=', False)]}"
                >
                    <field name="l10n_pt_loading_partner_id" />
                    <field name="l10n_pt_loading_time" />
                    <field name="l10n_pt_unloading_partner_id" />
                    <field name="l10n_pt_unloading_time" />
                </group>
            </xpath>

            <xpath expr="//page[@id='other_tab_entry']" position="after">
                <page
                    id="integration_source_billing"
                    string="Integration Info"
                    name="integration_info"
                    attrs="{'invisible': [('source_billing', '!=', 'I')]}"
                >
                    <group>
                        <group>
                            <field name="name" />
                            <field
                                name="hash"
                                attrs="{'required': [('source_billing', '=', 'I'), ('hash_control', '!=', False)]}"
                            />
                            <field name="hash_control" />
                            <field
                                name="system_entry_date"
                                attrs="{'required': [('source_billing', '=', 'I')]}"
                            />
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
