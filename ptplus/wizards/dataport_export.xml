<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="dataport_export_form" model="ir.ui.view">
        <field name="name">dataport.export.form</field>
        <field name="model">dataport.export</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form string="Export">
                <field name="state" invisible="1" />
                <field name="filename" invisible="1" />
                <field name="format" invisible="1" />
                <field name="error" invisible="1" />
                <group invisible="state != 'select'" id="main_export_group">
                    <group>
                        <field
                            name="company_id"
                            options="{'no_create': True}"
                            groups="base.group_multi_company"
                        />
                        <field name="period" />
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="validate" invisible="format != 'xml'" />
                    </group>
                </group>
                <notebook tabpos="up" invisible="True">
                    <page string="Journals" name="journal_ids" invisible="True">
                        <field name="journal_ids" />
                    </page>
                </notebook>
                <div invisible="state != 'done'">
                    <h2>Export Complete</h2>
                    <p>
                        Generated file: <field
                        name="data"
                        readonly="1"
                        filename="filename"
                    />
                    </p>
                </div>
                <group name="error_info" string="Errors" invisible="state != 'done'">
                    <field
                        name="warnings"
                        readonly="1"
                        widget="html"
                        nolabel="1"
                        colspan="2"
                    />
                </group>
                <group name="log_info" string="Log info" invisible="state != 'done'">
                    <field name="log_on_close" />
                    <field name="log_as_reported" />
                </group>
                <footer invisible="state != 'select'">
                    <field name="export_xml_button" invisible="1" />
                    <field name="export_pdf_button" invisible="1" />
                    <field name="export_txt_button" invisible="1" />
                    <button
                        name="export_xml"
                        type="object"
                        class="oe_highlight"
                        string="Export XML"
                        invisible="not export_xml_button"
                    />
                    <button
                        name="export_pdf"
                        type="object"
                        class="oe_highlight"
                        string="Export PDF"
                        invisible="not export_pdf_button"
                    />
                    <button
                        name="export_txt"
                        type="object"
                        class="oe_highlight"
                        string="Export TXT"
                        invisible="not export_txt_button"
                    />
                    <button special="cancel" string="Cancel" />
                </footer>
                <footer invisible="state != 'done'">
                    <button name="close" type="object" string="Close" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
