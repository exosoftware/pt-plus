<?xml version="1.0" ?>
<odoo>
    <!-- POS order form -->
    <record id="view_pos_pos_form_pt" model="ir.ui.view">
        <field name="name">pos.order.form.pt</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <field name="pos_reference" position="before">
                <field name="l10n_ptplus_unique_id" />
                <field name="atcud" invisible="1" />
                <field name="l10n_pt_certification_text" invisible="1" />
                <field name="l10n_pt_doc_name" invisible="1" />
                <field name="l10n_pt_qr_code" invisible="1" />
                <field name="l10n_pt_move_data" invisible="1" />
                <field
                    name="l10n_pt_bill_ptplus_unique_id"
                    attrs="{'invisible': [('l10n_pt_bar_restaurant', '=', False)]}"
                />
                <field name="l10n_pt_bill_last_hash" invisible="1" />
                <field name="l10n_pt_bill_hash" invisible="1" />
                <field name="l10n_pt_bill_hash_control" invisible="1" />
                <field name="l10n_pt_bill_system_entry_date" invisible="1" />
                <field name="l10n_pt_bill_atcud" invisible="1" />
                <field name="l10n_pt_bill_qr_code" invisible="1" />
                <field name="l10n_pt_bar_restaurant" invisible="1" />
            </field>
        </field>
    </record>
    <!-- POS order tree -->
    <record id="view_pos_order_tree_pt" model="ir.ui.view">
        <field name="name">pos.order.tree.pt</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree" />
        <field name="arch" type="xml">
            <field name="pos_reference" position="before">
                <field name="l10n_ptplus_unique_id" />
                <field name="l10n_pt_move_data" invisible="1" />
            </field>
        </field>
    </record>
    <!-- POS order search -->
    <record id="view_pos_order_filter_pt" model="ir.ui.view">
        <field name="name">POS Order (PT filters)</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_filter" />
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <field name="date_order" position="after">
                <separator />
                <filter
                    string="Invoices"
                    name="invoices"
                    domain="[('fiscal_document_type_id.reversion', '=', False)]"
                />
                <filter
                    string="Credit Notes"
                    name="credit_notes"
                    domain="[('fiscal_document_type_id.reversion', '=', True)]"
                />
            </field>
        </field>
    </record>

</odoo>
