<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_accounting_section']" position="inside">
                <setting
                    id="pos_invoice_doc_pt"
                    company_dependent="1"
                    help="The portuguese fiscal document to apply on this POS invoices"
                >
                    <field
                        name="pos_l10n_pt_inv_fiscal_doc_type_id"
                        options="{'no_create': True}"
                    />
                </setting>

                <setting
                    id="pos_credit_note_doc_pt"
                    company_dependent="1"
                    help="The portuguese fiscal document to apply on this POS credit notes"
                >
                    <field
                        name="pos_l10n_pt_cred_fiscal_doc_type_id"
                        options="{'no_create': True}"
                    />
                </setting>

                <setting
                    id="pos_l10n_pt_default_partner_id"
                    company_dependent="1"
                    help="Default customer to use if none is set"
                >
                    <field name="pos_l10n_pt_default_partner_id" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
