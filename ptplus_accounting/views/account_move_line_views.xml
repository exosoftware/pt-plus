<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_line_list_pt" model="ir.ui.view">
        <field name="name">account.move.line.list.pt</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="l10n_pt_note" optional="hide" />
                <field name="pt_invoicing" invisible="1" />
            </xpath>

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('pt_invoicing', '!=', False), ('parent_state', '!=', 'draft')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_filter_pt" model="ir.ui.view">
        <field name="name">account.move.line.filter.pt</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter
                    string="Note [pt]"
                    name="group_by_l10n_pt_note"
                    domain="[]"
                    context="{'group_by': 'l10n_pt_note'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
