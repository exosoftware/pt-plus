<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="l10n_pt_import_saft_configuration_form" model="ir.ui.view">
        <field name="name">l10n_pt.import.saft.configuration.form</field>
        <field name="model">l10n_pt.import.saft.configuration</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="saft_number" />
                </group>
                <group>
                    <field name="disable_accounts" />
                </group>
                <group
                    name="info_message"
                    string="Info"
                    attrs="{'invisible': [('info_message', '=', False)]}"
                >
                    <field
                        name="info_message"
                        readonly="1"
                        widget="html"
                        nolabel="1"
                        colspan="2"
                    />
                </group>
                <footer>
                    <button
                        string="Disable Accounts"
                        name="compute_disable_accounts"
                        type="object"
                        class="oe_highlight"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record
        id="action_l10n_pt_import_saft_configuration_form"
        model="ir.actions.act_window"
    >
        <field name="name">Import SAF-T Configuration</field>
        <field name="res_model">l10n_pt.import.saft.configuration</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_pt_import_saft_configuration_form" />
        <field name="target">new</field>
    </record>
</odoo>
