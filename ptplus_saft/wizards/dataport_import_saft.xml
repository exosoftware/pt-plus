<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="dataport_import_saft_form" model="ir.ui.view">
        <field name="name">dataport.import.saft.form</field>
        <field name="model">dataport.import.saft</field>
        <field name="arch" type="xml">
            <form>
                 <group string="SAF-T">
                    <field name="data" filename="filename" />
                    <field name="filename" invisible="1" />
                    <field
                        name="company_id"
                        options="{'no_create': True}"
                        groups="base.group_multi_company"
                        readonly="0"
                    />
                </group>
                <group string="Create/Update Records">
                    <field name="update_partners" />
                    <field name="update_accounts" />
                    <field name="update_products" />
                    <field name="update_journal_entries" />
                </group>
                <group name="error_info" string="Errors" invisible="warnings == False">
                    <field
                        name="warnings"
                        readonly="1"
                        widget="html"
                        nolabel="1"
                        colspan="2"
                    />
                </group>
                <footer>
                    <button
                        name="import_saft"
                        string="Import"
                        type="object"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Close" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dataport_import_saft_form" model="ir.actions.act_window">
        <field name="name">Import SAF-T</field>
        <field name="res_model">dataport.import.saft</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dataport_import_saft_form" />
        <field name="target">new</field>
    </record>

</odoo>
