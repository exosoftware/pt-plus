<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Invoice form -->
    <record id="view_move_form_edi_pt" model="ir.ui.view">
        <field name="name">account.move.form.pt.edi</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="edi_state" position="after">
                <field
                    name="l10n_pt_edi_cius_broker_id"
                    string="Broker"
                    attrs="{'invisible': [('source_billing', '=', False)]}"
                />
            </field>
            <xpath expr="//group[@name='sale_info_group']" position="inside">
                <field
                    name="l10n_pt_commitment_number"
                    attrs="{'invisible': [('source_billing', '=', False)]}"
                />
                <field
                    name="l10n_pt_fitting_number"
                    attrs="{'invisible': [('source_billing', '=', False)]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
