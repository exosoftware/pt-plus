<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Sales order form  -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.pt</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- Disable Pro-forma stuff -->
            <xpath
                expr="//button[@name='action_quotation_send'][@groups='sale.group_proforma_sales'][1]"
                position="attributes"
            >
                <attribute
                    name="invisible"
                >state != 'draft' or invoice_count > 1 or source_billing</attribute>
            </xpath>
            <xpath
                expr="//button[@name='action_quotation_send'][@groups='sale.group_proforma_sales'][2]"
                position="attributes"
            >
                <attribute
                    name="invisible"
                >state == 'draft' or invoice_count >= 1 or source_billing</attribute>
            </xpath>
            <!-- Add a issue button for quotations -->
            <xpath expr="//button[@id='action_confirm']" position="after">
                <button
                    name="action_quotation_sent"
                    id="action_quotation_sent"
                    string="Issue Doc."
                    type="object"
                    invisible="state != 'draft' or not fiscal_document_type_id"
                    help="Lock and issue the document so that it can be printed or sent to the partner. "
                />
            </xpath>
            <!-- Confirm cancellation -->
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute
                    name="confirm"
                >Are you sure you want to cancel the document?</attribute>
            </xpath>
            <!-- Prohibit second confirmation for same quotation -->
            <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                <attribute
                    name="invisible"
                >state != 'sent' or l10n_pt_order_id</attribute>
                <attribute
                    name="context"
                >{'validate_analytic': True, 'bypass_field_protection': True}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute
                    name="invisible"
                >state != 'draft' or l10n_pt_order_id</attribute>
                <attribute
                    name="context"
                >{'validate_analytic': True, 'bypass_field_protection': True}</attribute>
            </xpath>

            <!-- Quotations/Orders cross references-->
            <field name="origin" position="after">
                <field name="l10n_pt_order_id" invisible="not l10n_pt_order_id" />
                <field
                    name="l10n_pt_quotation_id"
                    invisible="not l10n_pt_quotation_id"
                />
                <field
                    name="l10n_pt_date_issued"
                    readonly="state != 'draft'"
                    options="{'datepicker': {'warn_future': true}}"
                />
            </field>

            <!-- Source Billing and Fiscal Document Type-->
            <field name="date_order" position="after">
                <field name="source_billing" invisible="1" />
                <field
                    name="fiscal_document_type_id"
                    string="Document Type"
                    options="{'no_create_edit': True}"
                    domain="[('source_billing', '=', source_billing),
                            ('company_id', '=', company_id),
                            ('section', '=', 'work'),
                            ('type', '!=', 'NE')
                            ]"
                    readonly="state in ['cancel', 'posted']"
                />
            </field>

        </field>
    </record>

