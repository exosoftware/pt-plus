<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="ptplus.res_config_settings_view_form_pt" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='l10n_pt_pdf_signatures']/div[hasclass('o_setting_right_pane')]" position="inside">
                <div class="content-group">
                    <div class="mt8">
                        <button name="%(ptplus_pdf_sign.action_l10n_pt_report_signature)d" icon="fa-arrow-right" type="action"
                                string="Reports to Sign" class="btn-link"/>
                    </div>
                    <div class="row mt16">
                        <label
                            for="l10n_pt_digitalsign_client_id"
                            class="col-4 o_light_label"
                        />
                        <field name="l10n_pt_digitalsign_client_id" />
                        <label
                            for="l10n_pt_digitalsign_client_secret"
                            class="col-4 o_light_label"
                        />
                        <field name="l10n_pt_digitalsign_client_secret" />
                        <label
                            for="l10n_pt_digitalsign_redirect_uri"
                            class="col-4 o_light_label"
                        />
                        <field name="l10n_pt_digitalsign_redirect_uri" />
                        <label
                            for="l10n_pt_digitalsign_access_token"
                            class="col-4 o_light_label"
                        />
                        <field name="l10n_pt_digitalsign_access_token" />
                        <label
                            for="l10n_pt_digitalsign_authorizer_id"
                            class="col-4 o_light_label"
                        />
                        <field name="l10n_pt_digitalsign_authorizer_id" />
                        <label
                            for="l10n_pt_digitalsign_authorizer_secret"
                            class="col-4 o_light_label"
                        />
                        <field name="l10n_pt_digitalsign_authorizer_secret" />
                    </div>
                </div>
                <div class="content-group" >
                    <div class="mt8">
                        <i class="fa fa-arrow-right btn-link"/>
                        <field name="l10n_pt_digitalsign_get_access_token_url"
                            class="btn-link pl-1"
                            widget="url"
                            text="Get Access Token">
                        </field>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
