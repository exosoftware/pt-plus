    <template id="horizontal_digital_signature_stamp">
        <div
            class="digital-signature-stamp"
            t-if="company.l10n_pt_digitalsign_access_token"
        >
            <div>
                <img
                    t-if="company.l10n_pt_pdf_sign_stamp_image"
                    t-att-src="image_data_uri(company.l10n_pt_pdf_sign_stamp_image)"
                />
            </div>
            <div>
                <p><strong>Assinatura Eletrônica Avançada</strong></p>
                <p t-field="company.name" />
                <p
                    t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"
                />
                <!-- <span t-field="company.vat"/> -->
            </div>
        </div>
    </template>

    <template id="vertical_digital_signature_stamp">
        <div
            class="vertical-digital-signature-stamp"
            t-if="company.l10n_pt_digitalsign_access_token"
        >
            <div>
                <img
                    t-if="company.l10n_pt_pdf_sign_stamp_image"
                    t-att-src="image_data_uri(company.l10n_pt_pdf_sign_stamp_image)"
                />
            </div>
            <div>
                <p><strong>Assinatura Eletrônica Avançada</strong></p>
                <span t-field="company.name" />
                <span> | </span>
                <span
                    t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"
                />
                <!-- <span t-field="company.vat"/> -->
            </div>
        </div>
    </template>

