<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form_pt_cashflow" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.pt.cashflow</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_settings_pt']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" title="">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="transfer_cashflow_id" />
                        <div class="text-muted">
                            Use this field to set the default cash flow type that will be applied on
                            internal transfer operations on accounts requiring it
                        </div>
                        <field name="transfer_cashflow_id" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
