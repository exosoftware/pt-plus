<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Company -->
    <record id="view_company_form_eac" model="ir.ui.view">
        <field name="name">res.company.form.eac</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="EAC" name="company_eac" invisible="country_code != 'PT'">
                    <field name="l10n_pt_eac_ids" string="EAC" nolabel="1">
                        <tree editable="bottom" default_order="sequence, eac_id">
                            <field name="sequence" widget="handle" />
                            <field name="eac_id" />
                            <field name="activity_percent" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
