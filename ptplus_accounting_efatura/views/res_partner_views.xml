                        name="property_l10n_pt_efatura_product_id"
                        string="Product"
                    />
                    <field name="property_l10n_pt_efatura_tax_id" string="Stand. Tax" />
                    <field
                        name="property_l10n_pt_efatura_interm_tax_id"
                        string="Interm. Tax"
                    />
                    <field
                        name="property_l10n_pt_efatura_reduced_tax_id"
                        string="Red. Tax"
                    />
                    <field
                        name="property_l10n_pt_efatura_exempt_tax_id"
                        string="Exempt Tax"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
