<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Sale Report -->
    <template
        id="report_saleorder_document_pt_edi"
        inherit_id="sale.report_saleorder_document"
    >

        <xpath expr="//div[@id='informations']" position="inside">
            <div
                t-if="doc.source_billing and doc.l10n_pt_commitment_number"
                class="col-auto mw-100 mb-2"
            >
                <strong>Commitment No.:</strong>
                <p class="m-0" t-esc="doc.l10n_pt_commitment_number" />
            </div>
            <div
                t-if="doc.source_billing and doc.l10n_pt_fitting_number"
                class="col-auto mw-100 mb-2"
            >
                <strong>Fitting No.:</strong>
                <p class="m-0" t-esc="doc.l10n_pt_fitting_number" />
            </div>
        </xpath>

    </template>

</odoo>
