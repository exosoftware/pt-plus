<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Fiscal Document Types -->
    <record id="fiscal_document_type_view_tree_self_billing" model="ir.ui.view">
        <field name="name">fiscal.document.type.list.self_billing</field>
        <field name="model">fiscal.document.type</field>
        <field name="inherit_id" ref="ptplus.fiscal_document_type_view_tree" />
        <field name="arch" type="xml">
            <field name="used" position="before">
                <field name="l10n_pt_self_billing" readonly="state != 'draft'" />
                <field
                    name="l10n_pt_self_billing_partner_id"
                    invisible="not l10n_pt_self_billing"
                    required="l10n_pt_self_billing"
                    readonly="state != 'draft'"
                />
            </field>
        </field>
    </record>

    <record id="fiscal_document_type_view_form_self_billing" model="ir.ui.view">
        <field name="name">fiscal.document.type.form.self_billing</field>
        <field name="model">fiscal.document.type</field>
        <field name="inherit_id" ref="ptplus.fiscal_document_type_view_form" />
        <field name="arch" type="xml">
            <field name="used" position="before">
                <field name="l10n_pt_self_billing" readonly="state != 'draft'" />
                <label
                    for="l10n_pt_self_billing_partner_id"
                    invisible="not l10n_pt_self_billing"
                    readonly="state != 'draft'"
                />
                <div class="o_row" invisible="not l10n_pt_self_billing">
                    <field
                        name="l10n_pt_self_billing_partner_id"
                        required="l10n_pt_self_billing"
                    />
                    <button
                        name="action_series_sync_deals_self_billing"
                        string="Check Agreement"
                        type="object"
                        groups="account.group_account_manager"
                        help="Start a wizard to electronically see all self billing deals in the Tax Authority"
                        invisible="not l10n_pt_self_billing"
                    />
                </div>
            </field>
            <button name="action_series_register" position="attributes">
                <attribute
                    name="invisible"
                >state != 'draft' or validation_code or l10n_pt_self_billing</attribute>
            </button>
            <button name="action_series_sync" position="attributes">
                <attribute
                    name="invisible"
                >state != 'draft' or not validation_code or l10n_pt_self_billing</attribute>
            </button>
            <button name="action_series_cancel" position="attributes">
                <attribute
                    name="invisible"
                >state != 'running' or l10n_pt_self_billing</attribute>
            </button>
            <button name="action_series_finalize" position="attributes">
                <attribute
                    name="invisible"
                >state != 'running' or l10n_pt_self_billing</attribute>
            </button>
            <xpath expr="//header" position="inside">
                <button
                    name="action_series_register_self_billing"
                    string="Register"
                    class="oe_highlight"
                    type="object"
                    groups="account.group_account_manager"
                    help="Start a wizard to electronically transmit this series to the Tax Authority"
                    invisible="state != 'draft' or validation_code or not l10n_pt_self_billing"
                />
                <button
                    name="action_series_sync_self_billing"
                    string="Synchronize (Online or Offline)"
                    class="oe_highlight"
                    type="object"
                    groups="account.group_account_manager"
                    help="Start a wizard to import to import to Odoo a previously registered series"
                    invisible="state != 'draft' or not validation_code or not l10n_pt_self_billing"
                />
                <button
                    name="action_series_cancel_self_billing"
                    string="Cancel"
                    type="object"
                    groups="account.group_account_manager"
                    help="Start a wizard to electronically cancel this series on the Tax Authority system"
                    invisible="state != 'running' or not l10n_pt_self_billing"
                />
                <button
                    name="action_series_finalize_self_billing"
                    string="Finalize"
                    type="object"
                    groups="account.group_account_manager"
                    help="Start a wizard to communicate that this series has reached the end of its lifecycle"
                    invisible="state != 'running' or not l10n_pt_self_billing"
                />
            </xpath>
        </field>
    </record>
</odoo>
