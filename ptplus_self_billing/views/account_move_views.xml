<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Purchase invoices -->
    <record id="view_move_form_pt_self_billing" model="ir.ui.view">
        <field name="name">account.move.form.pt.self_billing</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <field name="invoice_date" position="after">
                <field
                    name="l10n_pt_is_partner_self_billing"
                    invisible="1"
                    attrs="{'invisible': ['|', ('country_code', '!=', 'PT'), ('move_type', 'not in', ('in_invoice', 'in_refund'))]}"
                />
                <field
                    name="l10n_pt_self_billing"
                    attrs="{'invisible':['|', ('move_type','not in', ('in_invoice', 'in_refund')), ('l10n_pt_is_partner_self_billing','=',False)]}"
                />

            </field>
            <field name="fiscal_document_type_id" position="attributes">
                <attribute name="domain">
                    [('source_billing', '=', source_billing),
                     ('company_id', '=', company_id),
                     ('section', '=', 'invoice'),
                     ('correction', '=', (move_type in ('out_refund', 'in_refund'))),
                     ('reversion', '=', (move_type in ('out_refund', 'in_refund'))),
                     ('point_of_sale', '=', False),
                     ('l10n_pt_self_billing', '=', l10n_pt_self_billing),
                     '|',
                     ('l10n_pt_self_billing', '=', False),
                     ('l10n_pt_self_billing_partner_id', '=', partner_id)
                    ]
                </attribute>
            </field>
        </field>
    </record>

</odoo>
